<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import com.jrgc.banknu.uicomponents.CurrencyField?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.jrgc.banknu.controllers.manager.TransferController">

    <padding>
        <Insets topRightBottomLeft="20.0"/>
    </padding>

    <top>
        <Label BorderPane.alignment="CENTER" fx:id="accountText" textAlignment="CENTER" styleClass="title" text="DepÃ³sito"
               textFill="#9F3EDE"/>
    </top>

    <center>
        <VBox spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets topRightBottomLeft="20.0"/>
            </padding>

            <VBox spacing="8">
                <Label text="Selecione o cliente destino:"/>
                <ChoiceBox fx:id="clientChoiceBox" prefWidth="180" onAction="#onClientSelect"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Selecione a conta destino:"/>
                <ChoiceBox fx:id="destinationAccountChoiceBox" prefWidth="180" />
            </VBox>

            <VBox spacing="8">
                <Label text="Valor:"/>
                <CurrencyField fx:id="moneyTextField" promptText="R$" />
            </VBox>
            <Button text="Transferir" onAction="#onTransferClick"/>
        </VBox>
    </center>

    <stylesheets>
        <URL value="@../styles/main.css" />
    </stylesheets>
</BorderPane>
